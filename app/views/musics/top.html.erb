    <style>
    @keyframes rainbow {
        0% { color: red; }
        14% { color: orange; }
        28% { color: yellow; }
        42% { color: green; }
        57% { color: blue; }
        71% { color: indigo; }
        85% { color: violet; }
        100% { color: red; }
    }

    @keyframes wave {
        0%, 100% { transform: translateY(0); }
        25% { transform: translateY(-10px); }
        75% { transform: translateY(10px); }
    }

    .rainbow-text {
        font-family: 'Comic Sans MS', cursive;
        font-size: 24px;
        font-weight: bold;
        display: inline-block;
        animation: rainbow 3s infinite, wave 1s infinite;
    }
</style>
