<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/musics/#{@music.id}/update") do %>
      <div class="form">
        <div class="form-body">
          <% @music.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <div>
          <p>曲名</p>
            <textarea name="title"><%= @music.title %></textarea>
          </div>
          <div>
            <p>アーティスト</p>
            <textarea name="artist"><%= @music.artist %></textarea>
          </div>
          <div>
            <p>感情</p>
            <textarea name="emotion"><%= @music.emotion %></textarea>
          </div>
          <div>
            <p>YouTube</p>
            <textarea name="youTube"><%= @music.youTube %></textarea>
          </div>
          <div>
            <p>AppleMusic</p>
            <textarea name="appleMusic"><%= @music.appleMusic %></textarea>
          </div>
          <div>
            <p>Spotify</p>
            <textarea name="spotify"><%= @music.spotify %></textarea>
          </div>
          <div>
            <p>Rylic</p>
            <textarea name="rylic"><%= @music.rylic %></textarea>
          </div>
          <input type="submit" value="保存">
        </div>
      </div>
    <% end %>
  </div>
</div>